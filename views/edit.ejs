<% include partials/header %>
	
	<div class="ui main text container segment" id="topSpace">
		<div class="ui huge header"><%= blogPost.title %> (EDIT)</div>
		<form class="ui form" action="/blogs/<%= blogPost._id %>?_method=PUT" method="POST">
			<div class="field">
				<label>Title</label>
				<input type="text" name="blog[title]" value="<%= blogPost.title %>">
			</div>
			<div class="field">
				<label>Image URL</label>
				<input type="text" name="blog[image]" value="<%= blogPost.image %>">
			</div>
			<div class="field">
				<label>Content</label>
				<textarea name="blog[body]"><%- blogPost.body %></textarea>
			</div>
			<input type="submit" class="ui black big basic button">
		</form>
	</div>

<% include partials/footer %>